{
    "name": "ad-thiago/wordpress-elementor-plugin",
    "description": "Plugin WordPress otimizado com integração avançada ao Elementor",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Thiago Cruz",
            "email": "thiago@example.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "ElementorNeo\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 .",
        "cbf": "phpcbf --standard=PSR12 ."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
