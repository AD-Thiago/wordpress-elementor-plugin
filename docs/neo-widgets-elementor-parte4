### JavaScript Avan√ßado

```javascript
/**
 * Neo Booking Form Advanced
 */

class NeoBookingForm {
    constructor(element) {
        this.$form = $(element);
        this.currentStep = 1;
        this.totalSteps = 3;
        this.formData = {};
        
        this.init();
    }
    
    init() {
        this.initStepNavigation();
        this.initTerapiaSelection();
        this.initDatePicker();
        this.initTimeSlots();
        this.initValidation();
        this.initSubmit();
    }
    
    initStepNavigation() {
        this.$form.find('.neo-form-next').on('click', (e) => {
            e.preventDefault();
            if (this.validateCurrentStep()) {
                this.nextStep();
            }
        });
        
        this.$form.find('.neo-form-prev').on('click', (e) => {
            e.preventDefault();
            this.prevStep();
        });
    }
    
    nextStep() {
        if (this.currentStep < this.totalSteps) {
            this.animateStepTransition(this.currentStep, this.currentStep + 1);
            this.currentStep++;
            this.updateProgressBar();
        }
    }
    
    prevStep() {
        if (this.currentStep > 1) {
            this.animateStepTransition(this.currentStep, this.currentStep - 1);
            this.currentStep--;
            this.updateProgressBar();
        }
    }
    
    animateStepTransition(from, to) {
        const $fromStep = this.$form.find(`.neo-form-step[data-step="${from}"]`);
        const $toStep = this.$form.find(`.neo-form-step[data-step="${to}"]`);
        
        gsap.to($fromStep, {
            opacity: 0,
            x: -50,
            duration: 0.3,
            onComplete: () => {
                $fromStep.hide();
                $toStep.show();
                
                gsap.fromTo($toStep, 
                    { opacity: 0, x: 50 },
                    { opacity: 1, x: 0, duration: 0.3 }
                );
            }
        });
    }
    
    updateProgressBar() {
        const progress = (this.currentStep / this.totalSteps) * 100;
        
        gsap.to(this.$form.find('.neo-progress-fill'), {
            width: `${progress}%`,
            duration: 0.5,
            ease: 'power2.out'
        });
        
        // Atualizar step indicators
        this.$form.find('.neo-step-indicator').each((index, el) => {
            if (index < this.currentStep) {
                $(el).addClass('completed');
            } else if (index === this.currentStep - 1) {
                $(el).addClass('active');
            } else {
                $(el).removeClass('active completed');
            }
        });
    }
    
    initTerapiaSelection() {
        this.$form.find('.neo-terapia-option').on('click', function() {
            $(this).siblings().removeClass('selected');
            $(this).addClass('selected');
            
            // Animar sele√ß√£o
            gsap.to($(this), {
                scale: 1.05,
                duration: 0.2,
                yoyo: true,
                repeat: 1
            });
        });
    }
    
    initDatePicker() {
        // Integra√ß√£o Flatpickr ou custom calendar
        const calendar = this.$form.find('.neo-date-picker');
        
        flatpickr(calendar[0], {
            locale: 'pt',
            minDate: 'today',
            maxDate: new Date().fp_incr(30),
            disable: this.getDisabledDates(),
            onChange: (selectedDates, dateStr) => {
                this.formData.date = dateStr;
                this.loadAvailableTimeSlots(dateStr);
            }
        });
    }
    
    loadAvailableTimeSlots(date) {
        // AJAX para buscar hor√°rios dispon√≠veis
        $.ajax({
            url: neoAjax.ajaxurl,
            method: 'POST',
            data: {
                action: 'neo_get_time_slots',
                date: date,
                terapia: this.formData.terapia_id,
                nonce: neoAjax.nonce
            },
            success: (response) => {
                this.renderTimeSlots(response.data.slots);
            }
        });
    }
    
    renderTimeSlots(slots) {
        const $grid = this.$form.find('.neo-time-slots-grid');
        $grid.empty();
        
        slots.forEach((slot, index) => {
            const $slot = $(`
                <button type="button" class="neo-time-slot" data-time="${slot.time}">
                    ${slot.time}
                </button>
            `);
            
            $slot.on('click', function() {
                $(this).siblings().removeClass('selected');
                $(this).addClass('selected');
            });
            
            $grid.append($slot);
            
            // Animar entrada
            gsap.fromTo($slot,
                { opacity: 0, y: 20 },
                { opacity: 1, y: 0, duration: 0.3, delay: index * 0.05 }
            );
        });
    }
    
    initValidation() {
        // Valida√ß√£o em tempo real
        this.$form.find('[required]').on('blur', function() {
            const $field = $(this);
            const value = $field.val();
            
            if (!value) {
                $field.addClass('error');
                $field.siblings('.neo-error-message').text('Este campo √© obrigat√≥rio');
            } else {
                $field.removeClass('error');
                $field.siblings('.neo-error-message').text('');
            }
        });
        
        // Valida√ß√£o email
        this.$form.find('input[type="email"]').on('blur', function() {
            const $field = $(this);
            const email = $field.val();
            const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            
            if (!regex.test(email)) {
                $field.addClass('error');
                $field.siblings('.neo-error-message').text('Email inv√°lido');
            }
        });
        
        // Mask telefone
        this.$form.find('input[type="tel"]').mask('(00) 00000-0000');
    }
    
    validateCurrentStep() {
        let isValid = true;
        const $currentStep = this.$form.find(`.neo-form-step[data-step="${this.currentStep}"]`);
        
        $currentStep.find('[required]').each(function() {
            const $field = $(this);
            if (!$field.val()) {
                $field.addClass('error');
                isValid = false;
            }
        });
        
        // Valida√ß√µes espec√≠ficas por step
        if (this.currentStep === 1) {
            if (!this.$form.find('.neo-terapia-option.selected').length) {
                alert('Por favor, selecione uma terapia');
                isValid = false;
            }
        }
        
        return isValid;
    }
    
    initSubmit() {
        this.$form.on('submit', (e) => {
            e.preventDefault();
            
            if (!this.validateCurrentStep()) {
                return;
            }
            
            this.submitBooking();
        });
    }
    
    submitBooking() {
        // Coletar todos os dados
        this.formData = {
            terapia: this.$form.find('.neo-terapia-option.selected').data('terapia-id'),
            nome: this.$form.find('[name="nome"]').val(),
            email: this.$form.find('[name="email"]').val(),
            telefone: this.$form.find('[name="telefone"]').val(),
            data: this.formData.date,
            horario: this.$form.find('.neo-time-slot.selected').data('time'),
            mensagem: this.$form.find('[name="mensagem"]').val()
        };
        
        // Mostrar loading
        this.showLoading();
        
        // AJAX submit
        $.ajax({
            url: neoAjax.ajaxurl,
            method: 'POST',
            data: {
                action: 'neo_submit_booking',
                formData: this.formData,
                nonce: neoAjax.nonce
            },
            success: (response) => {
                this.showSuccess(response.data);
            },
            error: () => {
                this.showError();
            }
        });
    }
    
    showSuccess(data) {
        // Esconder form
        this.$form.find('.neo-form-steps').fadeOut();
        
        // Mostrar success screen
        const $success = this.$form.find('.neo-form-success');
        $success.fadeIn();
        
        // Confetti animation
        this.launchConfetti();
        
        // Enviar WhatsApp (opcional)
        if (data.whatsapp_url) {
            setTimeout(() => {
                window.open(data.whatsapp_url, '_blank');
            }, 2000);
        }
    }
    
    launchConfetti() {
        // Usar biblioteca confetti-js ou canvas-confetti
        confetti({
            particleCount: 100,
            spread: 70,
            origin: { y: 0.6 }
        });
    }
    
    showLoading() {
        this.$form.find('.neo-form-submit').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Agendando...');
    }
    
    showError() {
        alert('Erro ao agendar. Tente novamente.');
        this.$form.find('.neo-form-submit').prop('disabled', false).html('Tentar Novamente');
    }
}

// Initialize
$(window).on('elementor/frontend/init', function() {
    elementorFrontend.hooks.addAction('frontend/element_ready/neo-booking-form.default', function($scope) {
        new NeoBookingForm($scope.find('.neo-booking-form'));
    });
});
```

