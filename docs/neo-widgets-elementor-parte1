### JavaScript GSAP + Three.js

```javascript
/**
 * Neo Hero Trisquel - Advanced Animations
 */

(function($) {
    'use strict';
    
    class NeoHeroTrisquel {
        constructor(element) {
            this.$element = $(element);
            this.settings = {
                trisquelEnabled: this.$element.data('trisquel-enabled') === 'yes',
                trisquelSize: this.$element.data('trisquel-size') || 100,
                colors: {
                    spiral1: 0x4CAF50,
                    spiral2: 0x7B68EE,
                    spiral3: 0x40E0D0
                }
            };
            
            if (this.settings.trisquelEnabled) {
                this.initThreeJS();
            }
            
            this.initGSAP();
        }
        
        initThreeJS() {
            const canvas = this.$element.find('.neo-trisquel-canvas')[0];
            
            // Scene setup
            this.scene = new THREE.Scene();
            this.camera = new THREE.PerspectiveCamera(
                75,
                canvas.offsetWidth / canvas.offsetHeight,
                0.1,
                1000
            );
            this.camera.position.z = 5;
            
            // Renderer
            this.renderer = new THREE.WebGLRenderer({
                antialias: true,
                alpha: true
            });
            this.renderer.setSize(canvas.offsetWidth, canvas.offsetHeight);
            this.renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            canvas.appendChild(this.renderer.domElement);
            
            // Criar Trisquel
            this.createTrisquel();
            
            // Lighting
            const ambient = new THREE.AmbientLight(0xffffff, 0.6);
            this.scene.add(ambient);
            
            const directional = new THREE.DirectionalLight(0xffffff, 0.8);
            directional.position.set(5, 5, 5);
            this.scene.add(directional);
            
            // Part√≠culas
            this.createParticles();
            
            // Animation loop
            this.animate();
            
            // Responsive
            window.addEventListener('resize', () => this.handleResize());
        }
        
        createTrisquel() {
            this.trisquel = new THREE.Group();
            
            // Criar 3 espirais
            for (let i = 0; i < 3; i++) {
                const spiral = this.createSpiral(
                    (i * 2.09),
                    this.settings.colors[`spiral${i + 1}`]
                );
                this.trisquel.add(spiral);
            }
            
            this.scene.add(this.trisquel);
        }
        
        createSpiral(rotation, color) {
            const points = [];
            
            for (let i = 0; i < 100; i++) {
                const t = i / 100;
                const angle = t * Math.PI * 4 + rotation;
                const radius = t * 2;
                
                points.push(
                    new THREE.Vector3(
                        Math.cos(angle) * radius,
                        Math.sin(angle) * radius,
                        t * 0.5
                    )
                );
            }
            
            const geometry = new THREE.BufferGeometry().setFromPoints(points);
            const material = new THREE.LineBasicMaterial({
                color: color,
                linewidth: 3,
                transparent: true,
                opacity: 0.9
            });
            
            return new THREE.Line(geometry, material);
        }
        
        createParticles() {
            const geometry = new THREE.BufferGeometry();
            const count = 200;
            const positions = new Float32Array(count * 3);
            
            for (let i = 0; i < count * 3; i++) {
                positions[i] = (Math.random() - 0.5) * 10;
            }
            
            geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
            
            const material = new THREE.PointsMaterial({
                size: 0.03,
                color: 0x4CAF50,
                transparent: true,
                opacity: 0.5
            });
            
            this.particles = new THREE.Points(geometry, material);
            this.scene.add(this.particles);
        }
        
        animate() {
            requestAnimationFrame(() => this.animate());
            
            // Rota√ß√£o suave do Trisquel
            this.trisquel.rotation.z += 0.005;
            
            // Rota√ß√£o das part√≠culas
            this.particles.rotation.y += 0.001;
            
            this.renderer.render(this.scene, this.camera);
        }
        
        handleResize() {
            const canvas = this.$element.find('.neo-trisquel-canvas')[0];
            
            this.camera.aspect = canvas.offsetWidth / canvas.offsetHeight;
            this.camera.updateProjectionMatrix();
            
            this.renderer.setSize(canvas.offsetWidth, canvas.offsetHeight);
        }
        
        initGSAP() {
            gsap.registerPlugin(ScrollTrigger);
            
            // Animate title with SplitText
            const title = this.$element.find('.neo-hero-title');
            if (title.length) {
                const text = title.text();
                title.html('');
                
                text.split('').forEach(char => {
                    const span = $('<span>').text(char === ' ' ? '\u00A0' : char);
                    title.append(span);
                });
                
                gsap.fromTo(
                    title.find('span'),
                    { opacity: 0, y: 20 },
                    {
                        opacity: 1,
                        y: 0,
                        duration: 0.5,
                        stagger: 0.03,
                        ease: 'power2.out'
                    }
                );
            }
            
            // Animate subtitle
            gsap.fromTo(
                this.$element.find('.neo-hero-subtitle'),
                { opacity: 0, y: 30 },
                {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    delay: 0.5,
                    ease: 'power3.out'
                }
            );
        }
    }
    
    // Initialize on Elementor widgets
    $(window).on('elementor/frontend/init', function() {
        elementorFrontend.hooks.addAction('frontend/element_ready/neo-hero-trisquel.default', function($scope) {
            new NeoHeroTrisquel($scope.find('.neo-hero-trisquel'));
        });
    });
    
})(jQuery);
```

