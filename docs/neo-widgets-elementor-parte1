### C√≥digo Estrutural

```php
<?php
/**
 * Neo Hero Trisquel Widget
 * 
 * @package Neo_Holistica_Elementor
 */

class Neo_Hero_Trisquel_Widget extends \Elementor\Widget_Base {
    
    public function get_name() {
        return 'neo-hero-trisquel';
    }
    
    public function get_title() {
        return __( 'Neo Hero Trisquel', 'neo-holistica' );
    }
    
    public function get_icon() {
        return 'eicon-slider-3d';
    }
    
    public function get_categories() {
        return [ 'neo-holistica-premium' ];
    }
    
    public function get_keywords() {
        return [ 'hero', 'trisquel', '3d', 'animation', 'holistic' ];
    }
    
    public function get_script_depends() {
        return [ 'three-js', 'gsap-core', 'neo-hero-trisquel' ];
    }
    
    public function get_style_depends() {
        return [ 'neo-hero-trisquel-style' ];
    }
    
    protected function register_controls() {
        
        // Layout Settings
        $this->start_controls_section(
            'section_layout',
            [
                'label' => __( 'Layout', 'neo-holistica' ),
                'tab' => \Elementor\Controls_Manager::TAB_CONTENT,
            ]
        );
        
        $this->add_responsive_control(
            'hero_height',
            [
                'label' => __( 'Altura', 'neo-holistica' ),
                'type' => \Elementor\Controls_Manager::SLIDER,
                'size_units' => [ 'px', 'vh', '%' ],
                'range' => [
                    'px' => [
                        'min' => 300,
                        'max' => 1200,
                        'step' => 10,
                    ],
                    'vh' => [
                        'min' => 30,
                        'max' => 100,
                        'step' => 5,
                    ],
                ],
                'default' => [
                    'unit' => 'vh',
                    'size' => 100,
                ],
                'selectors' => [
                    '{{WRAPPER}} .neo-hero-trisquel' => 'height: {{SIZE}}{{UNIT}};',
                ],
            ]
        );
        
        $this->add_control(
            'content_alignment',
            [
                'label' => __( 'Alinhamento do Conte√∫do', 'neo-holistica' ),
                'type' => \Elementor\Controls_Manager::CHOOSE,
                'options' => [
                    'flex-start' => [
                        'title' => __( 'Topo', 'neo-holistica' ),
                        'icon' => 'eicon-v-align-top',
                    ],
                    'center' => [
                        'title' => __( 'Centro', 'neo-holistica' ),
                        'icon' => 'eicon-v-align-middle',
                    ],
                    'flex-end' => [
                        'title' => __( 'Rodap√©', 'neo-holistica' ),
                        'icon' => 'eicon-v-align-bottom',
                    ],
                ],
                'default' => 'center',
                'selectors' => [
                    '{{WRAPPER}} .neo-hero-content-wrapper' => 'justify-content: {{VALUE}};',
                ],
            ]
        );
        
        $this->end_controls_section();
        
        // Trisquel 3D Controls
        $this->start_controls_section(
            'section_trisquel',
            [
                'label' => __( 'Trisquel 3D', 'neo-holistica' ),
                'tab' => \Elementor\Controls_Manager::TAB_CONTENT,
            ]
        );
        
        $this->add_control(
            'enable_trisquel',
            [
                'label' => __( 'Habilitar Trisquel 3D', 'neo-holistica' ),
                'type' => \Elementor\Controls_Manager::SWITCHER,
                'label_on' => __( 'Sim', 'neo-holistica' ),
                'label_off' => __( 'N√£o', 'neo-holistica' ),
                'return_value' => 'yes',
                'default' => 'yes',
            ]
        );
        
        $this->add_control(
            'trisquel_size',
            [
                'label' => __( 'Tamanho do Trisquel', 'neo-holistica' ),
                'type' => \Elementor\Controls_Manager::SLIDER,
                'size_units' => [ '%' ],
                'range' => [
                    '%' => [
                        'min' => 50,
                        'max' => 150,
                        'step' => 5,
                    ],
                ],
                'default' => [
                    'unit' => '%',
                    'size' => 100,
                ],
                'condition' => [
                    'enable_trisquel' => 'yes',
                ],
            ]
        );
        
        // Mais controles...
        
        $this->end_controls_section();
        
        // Continue com outras se√ß√µes...
    }
    
    protected function render() {
        $settings = $this->get_settings_for_display();
        
        ?>
        <div class="neo-hero-trisquel" 
             data-trisquel-enabled="<?php echo esc_attr( $settings['enable_trisquel'] ); ?>"
             data-trisquel-size="<?php echo esc_attr( $settings['trisquel_size']['size'] ); ?>">
            
            <?php if ( 'yes' === $settings['enable_trisquel'] ) : ?>
                <div id="neo-trisquel-canvas-<?php echo $this->get_id(); ?>" 
                     class="neo-trisquel-canvas"></div>
            <?php endif; ?>
            
            <div class="neo-hero-gradient-bg"></div>
            
            <div class="neo-hero-content-wrapper">
                <div class="neo-hero-content">
                    
                    <?php if ( ! empty( $settings['hero_title'] ) ) : ?>
                        <h1 class="neo-hero-title" data-gsap-animate="splitText">
                            <?php echo wp_kses_post( $settings['hero_title'] ); ?>
                        </h1>
                    <?php endif; ?>
                    
                    <?php if ( ! empty( $settings['hero_subtitle'] ) ) : ?>
                        <h2 class="neo-hero-subtitle" data-gsap-animate="fadeInUp">
                            <?php echo wp_kses_post( $settings['hero_subtitle'] ); ?>
                        </h2>
                    <?php endif; ?>
                    
                    <!-- CTAs, etc -->
                    
                </div>
            </div>
            
        </div>
        <?php
    }
}
```

