### JavaScript GSAP

```javascript
/**
 * Neo FAQ Accordion
 */

class NeoFaqAccordion {
    constructor(element) {
        this.$element = $(element);
        this.settings = {
            allowMultiple: this.$element.data('allow-multiple') === 'yes',
            animation: this.$element.data('animation') || 'slide'
        };
        
        this.init();
    }
    
    init() {
        this.initAccordion();
        this.initSearch();
        this.animateEntrance();
    }
    
    initAccordion() {
        this.$element.find('.neo-faq-question').on('click', (e) => {
            e.preventDefault();
            const $item = $(e.currentTarget).closest('.neo-faq-item');
            
            if ($item.hasClass('active')) {
                this.closeItem($item);
            } else {
                if (!this.settings.allowMultiple) {
                    this.closeAllItems();
                }
                this.openItem($item);
            }
        });
    }
    
    openItem($item) {
        const $answer = $item.find('.neo-faq-answer');
        const $icon = $item.find('.neo-faq-icon');
        
        $item.addClass('active');
        
        // Animar √≠cone
        gsap.to($icon, {
            rotation: 45,
            duration: 0.3,
            ease: 'power2.out'
        });
        
        // Animar resposta
        if (this.settings.animation === 'slide') {
            gsap.fromTo($answer,
                { height: 0, opacity: 0 },
                {
                    height: 'auto',
                    opacity: 1,
                    duration: 0.4,
                    ease: 'power2.out'
                }
            );
        } else if (this.settings.animation === 'fade') {
            gsap.to($answer, {
                height: 'auto',
                opacity: 1,
                duration: 0.3
            });
        }
    }
    
    closeItem($item) {
        const $answer = $item.find('.neo-faq-answer');
        const $icon = $item.find('.neo-faq-icon');
        
        $item.removeClass('active');
        
        gsap.to($icon, {
            rotation: 0,
            duration: 0.3,
            ease: 'power2.out'
        });
        
        gsap.to($answer, {
            height: 0,
            opacity: 0,
            duration: 0.3,
            ease: 'power2.in'
        });
    }
    
    closeAllItems() {
        this.$element.find('.neo-faq-item.active').each((i, item) => {
            this.closeItem($(item));
        });
    }
    
    initSearch() {
        const $searchBox = this.$element.find('.neo-faq-search');
        
        if ($searchBox.length) {
            $searchBox.on('input', (e) => {
                const query = e.target.value.toLowerCase();
                
                this.$element.find('.neo-faq-item').each(function() {
                    const $item = $(this);
                    const question = $item.find('.neo-faq-question-text').text().toLowerCase();
                    const answer = $item.find('.neo-faq-answer').text().toLowerCase();
                    
                    if (question.includes(query) || answer.includes(query)) {
                        gsap.to($item, {
                            opacity: 1,
                            height: 'auto',
                            marginBottom: 16,
                            duration: 0.3
                        });
                    } else {
                        gsap.to($item, {
                            opacity: 0,
                            height: 0,
                            marginBottom: 0,
                            duration: 0.3
                        });
                    }
                });
            });
        }
    }
    
    animateEntrance() {
        gsap.fromTo(this.$element.find('.neo-faq-item'),
            { opacity: 0, y: 30 },
            {
                opacity: 1,
                y: 0,
                duration: 0.5,
                stagger: 0.1,
                ease: 'back.out(1.7)',
                scrollTrigger: {
                    trigger: this.$element,
                    start: 'top 80%'
                }
            }
        );
    }
}
```

