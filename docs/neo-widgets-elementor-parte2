### JavaScript GSAP

```javascript
/**
 * Neo Terapia Card - Advanced Interactions
 */

(function($) {
    'use strict';
    
    class NeoTerapiaCard {
        constructor(element) {
            this.$element = $(element);
            this.$card = this.$element.find('.neo-terapia-card');
            this.settings = {
                enable3D: this.$card.data('3d-enabled') === 'yes',
                intensity3D: this.$card.data('3d-intensity') || 15,
                enableGlow: this.$card.data('glow-enabled') === 'yes'
            };
            
            this.init();
        }
        
        init() {
            // GSAP Entrance Animation
            this.animateEntrance();
            
            // 3D Hover Effect
            if (this.settings.enable3D) {
                this.init3DHover();
            }
            
            // Price Counter Animation
            this.initPriceCounter();
            
            // Icon Bounce on Hover
            this.initIconAnimation();
        }
        
        animateEntrance() {
            gsap.fromTo(
                this.$card,
                {
                    opacity: 0,
                    scale: 0.8,
                    rotateY: -10
                },
                {
                    opacity: 1,
                    scale: 1,
                    rotateY: 0,
                    duration: 0.8,
                    ease: 'back.out(1.7)',
                    scrollTrigger: {
                        trigger: this.$card,
                        start: 'top 85%',
                        toggleActions: 'play none none none'
                    }
                }
            );
        }
        
        init3DHover() {
            const card = this.$card[0];
            const intensity = this.settings.intensity3D;
            
            this.$card.on('mousemove', (e) => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                
                const rotateX = ((y - centerY) / centerY) * -intensity;
                const rotateY = ((x - centerX) / centerX) * intensity;
                
                gsap.to(card, {
                    rotateX: rotateX,
                    rotateY: rotateY,
                    duration: 0.3,
                    ease: 'power2.out',
                    transformPerspective: 1000,
                    transformStyle: 'preserve-3d'
                });
            });
            
            this.$card.on('mouseleave', () => {
                gsap.to(card, {
                    rotateX: 0,
                    rotateY: 0,
                    duration: 0.5,
                    ease: 'power2.out'
                });
            });
        }
        
        initPriceCounter() {
            const $priceValue = this.$card.find('.neo-price-value');
            const targetPrice = parseInt($priceValue.closest('.neo-terapia-price').data('price'));
            
            this.$card.on('mouseenter', () => {
                gsap.to($priceValue[0], {
                    innerHTML: targetPrice,
                    duration: 1,
                    snap: { innerHTML: 1 },
                    onUpdate: function() {
                        const value = Math.ceil(this.targets()[0].innerHTML);
                        $priceValue.text(value.toLocaleString('pt-BR'));
                    }
                });
            });
        }
        
        initIconAnimation() {
            const $icon = this.$card.find('.neo-terapia-icon');
            
            this.$card.on('mouseenter', () => {
                gsap.to($icon, {
                    y: -10,
                    duration: 0.4,
                    ease: 'power2.out'
                });
            });
            
            this.$card.on('mouseleave', () => {
                gsap.to($icon, {
                    y: 0,
                    duration: 0.4,
                    ease: 'power2.out'
                });
            });
        }
    }
    
    // Initialize
    $(window).on('elementor/frontend/init', function() {
        elementorFrontend.hooks.addAction('frontend/element_ready/neo-terapia-card.default', function($scope) {
            new NeoTerapiaCard($scope);
        });
    });
    
})(jQuery);
```

