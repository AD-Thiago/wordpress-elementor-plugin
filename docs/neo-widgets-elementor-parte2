    protected function render() {
        $settings = $this->get_settings_for_display();
        
        // Determinar cores baseado no preset
        $color_presets = [
            'biomagnetismo' => ['#4CAF50', '#7B68EE'],
            'reiki' => ['#7B68EE', '#40E0D0'],
            'barras' => ['#40E0D0', '#48D1CC'],
            'radionica' => ['#48D1CC', '#DDA0DD'],
            'radiestesia' => ['#4CAF50', '#40E0D0'],
            'corte' => ['#DDA0DD', '#7B68EE'],
        ];
        
        if ( 'custom' !== $settings['color_preset'] ) {
            $colors = $color_presets[ $settings['color_preset'] ];
            $cor1 = $colors[0];
            $cor2 = $colors[1];
        } else {
            $cor1 = $settings['cor_primaria'];
            $cor2 = $settings['cor_secundaria'];
        }
        
        $gradient = sprintf(
            'linear-gradient(%sdeg, %s, %s)',
            $settings['angulo_gradiente']['size'],
            $cor1,
            $cor2
        );
        
        $card_classes = 'neo-terapia-card';
        if ( 'yes' === $settings['enable_3d'] ) {
            $card_classes .= ' neo-terapia-card--3d';
        }
        if ( 'yes' === $settings['is_destaque'] ) {
            $card_classes .= ' neo-terapia-card--destaque';
        }
        
        ?>
        <div class="<?php echo esc_attr( $card_classes ); ?>" 
             style="background: <?php echo esc_attr( $gradient ); ?>;"
             data-3d-enabled="<?php echo esc_attr( $settings['enable_3d'] ); ?>"
             data-3d-intensity="<?php echo esc_attr( $settings['intensidade_3d']['size'] ); ?>"
             data-glow-enabled="<?php echo esc_attr( $settings['enable_glow'] ); ?>">
            
            <?php if ( 'yes' === $settings['is_destaque'] ) : ?>
                <div class="neo-terapia-badge">
                    <span><?php esc_html_e( 'Mais Procurada', 'neo-holistica' ); ?></span>
                </div>
            <?php endif; ?>
            
            <div class="neo-terapia-card__content">
                
                <?php if ( ! empty( $settings['terapia_icone_svg'] ) ) : ?>
                    <div class="neo-terapia-icon">
                        <?php echo $settings['terapia_icone_svg']; ?>
                    </div>
                <?php endif; ?>
                
                <h3 class="neo-terapia-title">
                    <?php echo esc_html( $settings['terapia_nome'] ); ?>
                </h3>
                
                <p class="neo-terapia-description">
                    <?php echo esc_html( $settings['terapia_descricao'] ); ?>
                </p>
                
                <?php if ( ! empty( $settings['beneficios_lista'] ) ) : ?>
                    <ul class="neo-terapia-beneficios">
                        <?php foreach ( $settings['beneficios_lista'] as $beneficio ) : ?>
                            <li>
                                <?php \Elementor\Icons_Manager::render_icon( $beneficio['beneficio_icone'], [ 'aria-hidden' => 'true' ] ); ?>
                                <span><?php echo esc_html( $beneficio['beneficio_texto'] ); ?></span>
                            </li>
                        <?php endforeach; ?>
                    </ul>
                <?php endif; ?>
                
                <div class="neo-terapia-footer">
                    <div class="neo-terapia-meta">
                        <?php if ( ! empty( $settings['terapia_duracao'] ) ) : ?>
                            <span class="neo-terapia-duracao">
                                <i class="far fa-clock"></i>
                                <?php echo esc_html( $settings['terapia_duracao'] ); ?>
                            </span>
                        <?php endif; ?>
                    </div>
                    
                    <div class="neo-terapia-pricing">
                        <?php if ( 'yes' === $settings['mostrar_apartir'] ) : ?>
                            <span class="neo-terapia-price-label">
                                <?php esc_html_e( 'A partir de', 'neo-holistica' ); ?>
                            </span>
                        <?php endif; ?>
                        
                        <span class="neo-terapia-price" data-price="<?php echo esc_attr( $settings['terapia_preco'] ); ?>">
                            <span class="neo-price-currency">R$</span>
                            <span class="neo-price-value"><?php echo number_format( $settings['terapia_preco'], 0, ',', '.' ); ?></span>
                        </span>
                    </div>
                </div>
                
                <?php
                $target = $settings['terapia_link']['is_external'] ? ' target="_blank"' : '';
                $nofollow = $settings['terapia_link']['nofollow'] ? ' rel="nofollow"' : '';
                ?>
                
                <a href="<?php echo esc_url( $settings['terapia_link']['url'] ); ?>" 
                   class="neo-terapia-button"<?php echo $target . $nofollow; ?>>
                    <?php esc_html_e( 'Agendar Sess√£o', 'neo-holistica' ); ?>
                    <i class="fas fa-arrow-right"></i>
                </a>
                
            </div>
            
        </div>
        <?php
    }
}
```

### CSS Avan√ßado

```css
/* Neo Terapia Card - Ultra Premium */

.neo-terapia-card {
    position: relative;
    border-radius: 20px;
    padding: 40px 30px;
    color: #fff;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
}

.neo-terapia-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    animation: neo-card-shimmer 6s ease-in-out infinite;
    pointer-events: none;
}

@keyframes neo-card-shimmer {
    0%, 100% {
        transform: translate(0, 0);
    }
    50% {
        transform: translate(-20%, -20%);
    }
}

.neo-terapia-card--3d {
    transform-style: preserve-3d;
    perspective: 1000px;
}

.neo-terapia-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
}

.neo-terapia-card--destaque {
    border: 3px solid rgba(255, 255, 255, 0.5);
}

.neo-terapia-card--destaque::after {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
    border-radius: 20px;
    animation: neo-border-glow 3s ease-in-out infinite;
    pointer-events: none;
    z-index: -1;
}

@keyframes neo-border-glow {
    0%, 100% {
        opacity: 0;
    }
    50% {
        opacity: 1;
    }
}

.neo-terapia-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.95);
    color: #4CAF50;
    padding: 8px 18px;
    border-radius: 50px;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    animation: neo-badge-pulse 2s ease-in-out infinite;
    z-index: 10;
}

@keyframes neo-badge-pulse {
    0%, 100% {
        transform: scale(1);
        box-shadow: 0 4px 15px rgba(255,255,255,0.4);
    }
    50% {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(255,255,255,0.6);
    }
}

.neo-terapia-card__content {
    position: relative;
    z-index: 2;
}

.neo-terapia-icon {
    width: 70px;
    height: 70px;
    margin-bottom: 24px;
    transition: transform 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.neo-terapia-icon svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 4px 10px rgba(0,0,0,0.2));
}

.neo-terapia-card:hover .neo-terapia-icon {
    transform: scale(1.15) rotate(5deg);
}

.neo-terapia-title {
    font-family: 'Poppins', sans-serif;
    font-size: 28px;
