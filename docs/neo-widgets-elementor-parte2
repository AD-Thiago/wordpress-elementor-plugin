                    'reiki' => __( 'Reiki (Violeta‚ÜíTurquesa)', 'neo-holistica' ),
                    'barras' => __( 'Barras de Access (Turquesa‚ÜíAzul)', 'neo-holistica' ),
                    'radionica' => __( 'Mesa Radi√¥nica (Azul‚ÜíLil√°s)', 'neo-holistica' ),
                    'radiestesia' => __( 'Radiestesia (Verde‚ÜíTurquesa)', 'neo-holistica' ),
                    'corte' => __( 'Corte Energ√©tico (Lil√°s‚ÜíVioleta)', 'neo-holistica' ),
                    'custom' => __( 'Personalizado', 'neo-holistica' ),
                ],
            ]
        );
        
        $this->add_control(
            'cor_primaria',
            [
