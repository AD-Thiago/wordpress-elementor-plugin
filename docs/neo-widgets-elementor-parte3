### C√≥digo JavaScript Swiper

```javascript
/**
 * Neo Depoimentos Carousel
 */

class NeoDepoimentosCarousel {
    constructor(element) {
        this.$element = $(element);
        this.settings = this.getSettings();
        this.initSwiper();
        this.initAnimations();
    }
    
    getSettings() {
        return {
            autoplay: this.$element.data('autoplay') === 'yes',
            speed: this.$element.data('speed') || 5000,
            transition: this.$element.data('transition') || 'slide',
            itemsPerRow: this.$element.data('items-per-row') || 1,
            loop: this.$element.data('loop') === 'yes',
            pauseOnHover: this.$element.data('pause-hover') === 'yes'
        };
    }
    
    initSwiper() {
        this.swiper = new Swiper(this.$element.find('.swiper')[0], {
            slidesPerView: 1,
            spaceBetween: 30,
            loop: this.settings.loop,
            speed: 800,
            autoplay: this.settings.autoplay ? {
                delay: this.settings.speed,
                disableOnInteraction: false,
                pauseOnMouseEnter: this.settings.pauseOnHover
            } : false,
            effect: this.settings.transition,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
                renderBullet: function(index, className) {
                    return '<span class="' + className + '"><span class="neo-dot-progress"></span></span>';
                }
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                768: {
                    slidesPerView: Math.min(2, this.settings.itemsPerRow),
                },
                1024: {
                    slidesPerView: this.settings.itemsPerRow,
                }
            },
            on: {
                slideChange: () => {
                    this.animateStars();
                }
            }
        });
    }
    
    initAnimations() {
        // Animar entrada dos cards
        gsap.fromTo(
            this.$element.find('.neo-depoimento-card'),
            { opacity: 0, y: 30, scale: 0.95 },
            {
                opacity: 1,
                y: 0,
                scale: 1,
                duration: 0.6,
                stagger: 0.1,
                ease: 'back.out(1.7)',
                scrollTrigger: {
                    trigger: this.$element,
                    start: 'top 80%'
                }
            }
        );
        
        // Animar estrelas no slide ativo
        this.animateStars();
    }
    
    animateStars() {
        const $activeSlide = $(this.swiper.slides[this.swiper.activeIndex]);
        const $stars = $activeSlide.find('.neo-star');
        
        $stars.each(function(index) {
            gsap.fromTo(
                $(this).find('.neo-star-fill'),
                { scaleX: 0, transformOrigin: 'left' },
                {
                    scaleX: 1,
                    duration: 0.3,
                    delay: index * 0.1,
                    ease: 'power2.out'
                }
            );
        });
    }
}

// Initialize
$(window).on('elementor/frontend/init', function() {
    elementorFrontend.hooks.addAction('frontend/element_ready/neo-depoimentos-carousel.default', function($scope) {
        new NeoDepoimentosCarousel($scope);
    });
});
```

