<?php
class Neo_Biomagnetismo_Showcase_Widget extends \Elementor\Widget_Base {
    
    public function get_name() {
        return 'neo-biomagnetismo-showcase';
    }
    
    public function get_title() {
        return __( 'Neo Biomagnetismo Showcase', 'neo-holistica' );
    }
    
    protected function render() {
        $settings = $this->get_settings_for_display();
        ?>
        <div class="neo-biomagnetismo-showcase">
            <div class="neo-bio-content">
                <div class="neo-bio-badge">
                    <i class="fas fa-magnet"></i>
                    <?php esc_html_e( 'Terapia Destaque', 'neo-holistica' ); ?>
                </div>
                
                <h2 class="neo-bio-title" data-gsap-animate="fadeInUp">
                    <?php echo wp_kses_post( $settings['titulo'] ); ?>
                </h2>
                
                <h3 class="neo-bio-subtitle" data-gsap-animate="fadeInUp" data-gsap-delay="0.2">
                    <?php echo esc_html( $settings['subtitulo'] ); ?>
                </h3>
                
                <!-- Conte√∫do, benef√≠cios, etc -->
            </div>
            
            <div class="neo-bio-visualization">
                <?php if ( 'yes' === $settings['enable_3d'] ) : ?>
                    <div id="neo-bio-canvas-<?php echo $this->get_id(); ?>" 
                         class="neo-bio-canvas"
                         data-magnets-speed="<?php echo esc_attr( $settings['animation_speed']['size'] ); ?>">
                    </div>
                <?php endif; ?>
            </div>
        </div>
        <?php
    }
}
```

